</header>

<script>
    function searchHandler() {
        // $('#error_response_search').html('');
        // let list = null;
        const query = document.getElementById('searchquery').value;
        $.ajax({
            type: "GET",
            url: "/admin/search-user/" + query,
            success: function (msg) {
                console.log(msg);
                if (msg.users.length > 0) {
                    msg.users.forEach((user , index)=> {
                        let list =
                            `<tr>
                                <td>${index}</td>
                                <td>${user.name}</td>
                                <td>${user.email}</td>
                                <td>${user.is_admin}</td>
                                <td>${user.is_varified}</td>
                                <td>
                                    <a class="edit" href="/admin/editUser/${user._id}">
                                        <img src="/edit.png" alt="edit icon">
                                    </a>
                                </td>
                                <td>
                                    <a class="delete" onclick="deleteuser('${user._id}')">
                                        <img src="/trashcan.svg" alt="delete icon">
                                    </a>
                                </td>
                            </tr>`;
                        document.getElementById("usersContents").innerHTML = list;
                    })
                } else {
                    let list =
                        '<p>user data is not avaliable</p>';
                        document.getElementById("usersContents").innerHTML = list;
                };
            }
        })
        return true
    }
</script>