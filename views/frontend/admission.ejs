<!DOCTYPE html>
<html lang="en">
<!-- include head -->
<%- include('../partials/front-inc/head.ejs') %>

    <body>
        <!-- include header or navbar -->
        <%- include('../partials/front-inc/nav.ejs') %>
            <!-- page title -->
            <section class="page-title-section overlay" data-background="images/backgrounds/page-title.png">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <ul class="list-inline custom-breadcrumb mb-2">
                                <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="/">Home</a>
                                </li>
                                <li class="list-inline-item text-white h3 font-secondary nasted">Admission Form</li>
                            </ul>
                            <p class="text-lighten mb-0">Whether you're just starting your college career, transferring
                                from another school, or pursuing graduate opportunities,
                                USA gives you the tools you need to transform your world â€” and shape your future. Apply
                                now !</p>
                        </div>
                    </div>
                </div>
            </section>
            <!-- page title end -->
            <!-- admission form -->
            <section class="h-100">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100 bg-secondary">
                        <div class="col">
                            <div class="card card-registration my-4">
                                <div class="row g-0">
                                    <div class="col-xl-6 d-none d-xl-block">
                                        <h2 class="row d-flex justify-content-center align-items-center mt-4 mb-4">
                                            University of South Asia</h2>
                                        <img src="images/admission/admission-fom.jpg" alt="Sample photo"
                                            class="img-fluid"
                                            style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height: 90%;" />
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="card-body p-md-5 text-black">
                                            <h3 class="mb-5 text-uppercase">Student Admission Form</h3>
                                            <form id="admissionform" onsubmit="return admissionHandler()" method="post" class="row">
                                                <div class="row">
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <input type="text" id="firstname" name="firstname"
                                                                class="form-control form-control-lg"
                                                                placeholder="First Name" required
                                                                autocomplete="firstname" autofocus />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <input type="text" id="lastname" name="lastname"
                                                                class="form-control form-control-lg"
                                                                placeholder="Last Name" required autocomplete="lastname"
                                                                autofocus />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-outline mb-4">
                                                    <input type="text" id="email" name="email" required
                                                        autocomplete="email" autofocus
                                                        class="form-control form-control-lg"
                                                        placeholder="Enter your Email" />
                                                </div>
                                                <div class="form-outline mb-4">
                                                    <input type="number" id="cnic" name="cnic" required
                                                        pattern="^[0-9]{13}$"
                                                        title="Type Cnic Number format Like 0123456789012" autofocus
                                                        class="form-control form-control-lg"
                                                        placeholder="CNIC No. xxxxxxxxxxxxx" />
                                                </div>
                                                <div class="form-outline mb-4">
                                                    <input type="text" id="fathername" name="fathername" required
                                                        autocomplete="fathername" autofocus
                                                        class="form-control form-control-lg"
                                                        placeholder="Father Name" />
                                                </div>
                                                <div class="form-outline mb-4">
                                                    <input type="text" id="address" name="address" required
                                                        autocomplete="address" autofocus
                                                        class="form-control form-control-lg"
                                                        placeholder="Enter your Address" />
                                                </div>
                                                <div class="form-outline">
                                                    <input type="tel" id="phone" name="phone" required
                                                        autocomplete="phoneNumber" autofocus
                                                        class="form-control form-control-lg"
                                                        placeholder="Phone Number" />
                                                </div>
                                                <div
                                                    class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                                                    <h6 class="mb-0 me-4 mr-4 mt-4">Gender: </h6>
                                                    <div class="form-check form-check-inline mb-0 me-4 mt-4">
                                                        <input class="form-check-input" type="radio" name="gender"
                                                            id="gender" value="female" />
                                                        <label class="form-check-label"
                                                            for="femaleGender">Female</label>
                                                    </div>
                                                    <div class="form-check form-check-inline mb-0 me-4 mt-4">
                                                        <input class="form-check-input" type="radio" name="gender"
                                                            id="gender" value="male" />
                                                        <label class="form-check-label" for="maleGender">Male</label>
                                                    </div>
                                                    <div class="form-check form-check-inline mb-0 mt-4">
                                                        <input class="form-check-input" type="radio" name="gender"
                                                            id="gender" value="other" />
                                                        <label class="form-check-label" for="otherGender">Other</label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 mb-4">
                                                        <select class="select form-control-lg" name="interdegree">
                                                            <option value="Select Inter Degree" disabled>Select Intermediate Group
                                                            </option>
                                                            <option value="F.Sc. Pre-Medical">F.Sc. Pre-Medical</option>
                                                            <option value="F.Sc. Pre-Engineering">F.Sc. Pre-Engineering
                                                            </option>
                                                            <option value="ICS(Statistics)">ICS (Statistics)</option>
                                                        </select>
                                                        <label class="form-label select-label">Select Group</label>
                                                    </div>
                                                </div>
                                                <div class="form-outline mb-4">
                                                    <input type="number" id="intermark" name="intermark" required
                                                        autocomplete="marks" autofocus
                                                        class="form-control form-control-lg"
                                                        placeholder="Intermediate Marks" />
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 mb-4">
                                                        <select class="select form-control-lg" name="campus">
                                                            <option value="Select Campus" disabled>Select Campus</option>
                                                            <option value="DHA Campus">DHA Campus</option>
                                                            <option value="Cantt Campus">Cantt Campus</option>
                                                            <option value="Raiwind Road Campus">Raiwind Road Campus
                                                            </option>
                                                        </select>
                                                        <label class="form-label select-label">Select Campus</label>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <select class="select form-control-lg" name="degree">
                                                            <option value="Choose Program" disabled>Choose Program</option>
                                                            <option value="BS in Computer Science">BS in Computer Science</option>
                                                            <option value="BS in Information Technology">BS in Information Technology</option>
                                                            <option value="BB Administration">BB Administration</option>
                                                            <option value="MS in Information Technology">MS in Information Technology</option>
                                                            <option value="BA(Hons) Fashion Photography">BA(Hons) Fashion Photography</option>
                                                        </select>
                                                        <label class="form-label select-label">Choose option</label>
                                                    </div>
                                                </div>
                                                <div class="col-12 d-flex justify-content-center text-danger" id="error_response_6">
                                                    <% if(typeof message !=='undefined' ){ %>
                                                        <span class="invalid-feedback" role="alert">
                                                            <strong>
                                                                <%= message %>
                                                            </strong>
                                                        </span>
                                                        <% } %>
                                                </div>
                                                <div class="d-flex justify-content-end pt-3">
                                                    <button type="submit"
                                                        class="btn btn-warning btn-lg ms-2">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- admission form end -->

            <script>
                function admissionHandler() {
                    event.preventDefault();
                    $('#error_response_6').html('');
                    let formData = $('#admissionform').serializeArray();
                    var formObject = {};
                    for (var i = 0; i < formData.length; i++) {
                        formObject[formData[i]['name']] = formData[i]['value'];
                    }
                    $.ajax({
                        type: "POST",
                        data: formObject,
                        url: "/admissionapply",
                        success: function (msg) {
                            if (msg.message) {
                                $('#error_response_6').append(msg.message)
                            } else {
                                window.localStorage.setItem('admission', 1);
                                window.location.href = "/"
                            }
                        }
                    })
                    return true
                }
            </script>
            <script src="//code.tidio.co/vdkypx1wcyysyp9qgyr9kkoedfynl0kv.js" async></script>
            <!-- include footer  -->
            <%- include('../partials/front-inc/footer.ejs') %>
    </body>

</html>